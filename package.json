{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/domain-parent/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "description": "Adds a parent Node.js domain reference (parentDomain property) to all domains.",
  "devDependencies": {
    "@ava/babel": "^1.0.0",
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "ava": "^3.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-canonical": "^18.1.0",
    "flow": "^0.2.3",
    "gitdown": "^3.1.2",
    "husky": "^4.0.10",
    "nyc": "^15.0.0",
    "semantic-release": "^16.0.2"
  },
  "engines": {
    "node": ">10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "domain",
    "parent"
  ],
  "license": "BSD-3-Clause",
  "name": "domain-parent",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/domain-parent"
  },
  "scripts": {
    "generate-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test ava --verbose --serial"
  },
  "version": "1.0.0"
}
